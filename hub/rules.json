[
  {
    "if": {
      "topic": "sentinel/garage/main_door/state",
      "equals": {"position": "open"}
    },
    "then": {
      "device": "garage_light",
      "action": "on"
    }
  },
  {
    "if": {
      "topic": "sentinel/garage/main_door/state",
      "equals": {"position": "closed"}
    },
    "then": {
      "device": "garage_light",
      "action": "off"
    }
  }
]
